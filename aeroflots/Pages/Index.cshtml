@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="container">
    <h1>Search Tickets</h1>
    <form method="get" asp-page="Tickets/Search">
        <div class="form-group">
            <label class="control-label" for="from">From:</label>
            <input class="form-control" required type="text" name="from" />
        </div>
        <div class="form-group">
            <label class="control-label" for="to">To:</label>
            <input class="form-control" required type="text" name="to" />
        </div>
        <div class="form-group">
            <label class="control-label" for="date">Date:</label>
            <input value="@DateTime.Now.ToString("yyyy-MM-dd")" min="@DateTime.Now.ToString("yyyy-MM-dd")" max="@DateTime.Now.AddMonths(1).ToString("yyyy-MM-dd")" class="form-control" required type="date" name="date" />
        </div>
        <div class="form-group">
            <label class="control-label" for="mintransfer">Minimum time to transfer (minutes):</label>
            <input class="form-control" value="30" name="mintransfer" min="10" max="300" required type="number"/>
        </div>
        <div class="form-group">
            <input type="submit" value="Search" class="btn btn-primary" />
        </div>
    </form>
</div>
@page
@model aeroflots.Pages.Tickets.BuyModel

@{
    ViewData["Title"] = "Buy";
}

<h1>Buy</h1>

<h4>Ticket</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Ticket.Id" />
            <div class="form-group">
                <label asp-for="Ticket.Seats" class="control-label"></label>
                <input min="1" value="1" asp-for="Ticket.Seats" class="form-control" />
                <span asp-validation-for="Ticket.Seats" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Buy" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
